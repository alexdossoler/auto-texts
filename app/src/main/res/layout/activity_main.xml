<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnGrantPerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1) Grant Permissions (Call Log, Phone State, SMS)" />

    <Button
        android:id="@+id/btnOpenNotifAccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="2) Open Notification Access (Enable AutoText)" />

    <Button
        android:id="@+id/btnDisableBatteryOpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="3) Disable Battery Optimization (Recommended)" />

    <Button
        android:id="@+id/btnTestSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Send Test SMS to +1 407-234-5863" />

</LinearLayout>
